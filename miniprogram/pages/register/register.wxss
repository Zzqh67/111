/* 设置页面背景颜色和字体颜色 */
page {
	background-color: #f8f8f8;
	color: #333;
}

/* 使用flex布局让内容居中显示 */
.container {
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: center;
	height: 100%;
	padding: 30px;
	margin-top: 50px; /* 增加顶部边距 */
}

.input-box {
	width: 100%;
	margin-bottom: 50px;
}

.input {
	width: 100%;
	padding: 10px;
	border: none;
	border-radius: 25px;
	background-color: #fff;
	box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
	outline: none;
}

.upload-btn {
	background-color: #1aad19;
	color: #fff;
	padding: 10px;
	border-radius: 25px;
	font-weight: bold;
}

.register-btn {
	background-color: #1aad19;
	color: #fff;
	padding: 10px;
	border-radius: 25px;
	font-weight: bold;
	width: 80%;
}