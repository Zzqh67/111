.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20px;
  background-color: #f0f2f5; /* 页面背景色 */
}

.user-info-area {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 30px;
}

.avatar {
  width: 100px; /* 头像大小 */
  height: 100px;
  border-radius: 50%; /* 圆形头像 */
  margin-bottom: 10px; /* 与昵称之间的距离 */
}

.nickname {
  font-size: 18px;
  color: #333;
  font-weight: bold; /* 昵称使用加粗字体 */
}

.button-wrapper {
  display: flex;
  flex-direction: column;
  width: 100%; /* 按钮占满整个容器宽度 */
}

.button-style, .logout-button {
  background-color: #1E90FF; /* 按钮背景颜色 */
  color: white; /* 按钮文字颜色 */
  padding: 12px;
  border-radius: 8px; /* 圆角 */
  border: none; /* 移除默认边框 */
  margin-bottom: 15px; /* 按钮之间的间距 */
  font-size: 16px; /* 按钮文字大小 */
  transition: background-color 0.3s; /* 鼠标悬浮背景色变化的动画效果 */
}

.logout-button {
  background-color: #FF6347; /* 退出登录按钮使用不同的颜色 */
}

.button-style:hover, .logout-button:hover {
  background-color: #4682B4; /* 鼠标悬浮时按钮背景色变暗 */
}