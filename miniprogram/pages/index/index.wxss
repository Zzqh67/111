/* index页面的样式 */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 100rpx;
}

.sport-button {
  width: 90%;
  background-color: #fcfcfc; /* 按钮背景颜色 */
  border-radius: 10px; /* 按钮圆角 */
  margin: 30px 0; /* 按钮间距 */
  padding: 10px;
  font-size: 60px;
  color: rgb(0, 0, 0); /* 按钮文字颜色 */
  border: none; /* 去除边框 */
  box-shadow: 0 2px 5px rgba(0, 0, 0, 0.3); /* 按钮阴影 */
  display: flex;
  justify-content: center;
  align-items: center;
}

.icon {
  width: 120px; /* 图标宽度 */
  height: 120px; /* 图标高度 */
  margin-right: 50px; /* 图标和文字之间的距离 */
}a

.slogan {
  font-size: 10px; /* 字体大小 */
  color: #000000; /* 字体颜色，这里使用了鲜艳的橙色 */
  font-weight: bold; /* 字体加粗 */
  text-align: center; /* 文字居中 */
  padding: 2px 0; /* 内边距，稍微增加与其他内容的间隔 */
}